extends layout/default

block content_default
    main
        .index-content
            .index-title
                if user.username
                    h1 Bienvenido, #[a(href='/user') #{user.username}]
                    h2 Album nuevo
                else
                    h2 Lo mas reciente
            if albums.length > 0
                .index-main
                    for album in albums
                        if user.username
                            - var n = 0;
                            while n < user.following.length
                                if album.creator.username == user.following[n++]
                                    .index-item
                                        if album.cover
                                            a(href="/album/"+album._id)
                                                .index-cover(style="background-image: url('/covers/"+album.cover+"')")
                                                    img(src="/covers/default.png", alt="")
                                        else
                                            a(href="/album/"+album._id)
                                                img(src="images/1.png", alt="").index-cover
                                        a.album-title(href="/album/"+album._id)
                                            h3=album.title
                                        a.album-artist(href="/user/"+album.creator.username)=album.creator.fullname
                        else
                            .index-item
                                if album.cover
                                    a(href="/album/"+album._id)
                                        .index-cover(style="background-image: url('/covers/"+album.cover+"')")
                                            img(src="/covers/default.png", alt="")
                                else
                                    a(href="/album/"+album._id)
                                        img(src="images/1.png", alt="").index-cover
                                a.album-title(href="/album/"+album._id)
                                    h3=album.title
                                a.album-artist(href="/user/"+album.creator.username)=album.creator.fullname
                        
            else
                .index-item-2
                    h2 Este es tu Feed
                    p Sigue a tus amigos o artistas y estaras al dia de sus nuevos lanzamientos
                    p Sino conoces a nadie puedes empezar en #[a(href="/explorer") Explorar ]