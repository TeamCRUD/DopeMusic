extends layout
block content
    .signup-content
        .signup-title
            h1 Dope Music
        .signup-form
            form(action="/users", method="POST")
                .signup-input
                    input(type="text" , name="name", placeholder="Nombre", id="nombre")
                .signup-input
                    input(type="text" , name="lastname", placeholder="Apellido", id="lastname")
                .signup-input
                    input(type="text" , name="email", placeholder="Correo electronico", id="email")
                .signup-input
                    input(type="text" , name="username", placeholder="Nombre de usuario", id="username")
                .signup-input
                    input(type="password" , name="password", placeholder="Contraseña", id="password")
                .signup-button
                    input.signup-button-1(type="submit" value="Registrar")
                    a.signup-button-2(href="/") Cancelar
                .signup-button
                    a.signup-button-3(href="/logout") Cerrar sesión
                    //a.signup-button-3(href="/login") Ya tengo cuenta