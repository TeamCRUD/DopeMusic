extends ../layout_app

block content_app
    .form-content 
        .form-title
            h1 Editar album
        .form-main
            form(action="/album/"+album._id+"?_method=PUT" method="POST")
                .form-input
                    input(type="text" name="title" placeholder="Titulo del album..." value=album.title)
                .form-input
                    input(type="text" name="description" placeholder="Titulo del album..." value=album.description)
                .form-input
                    input(type="text" name="year" placeholder="Titulo del album..." value=album.year)
                .form-button
                    input(type="submit" value="Guardar cambios")