extends ../layout_app

block content_app
    h1 #{album.title}
    p #{album.description}
    p #{album.year}
    for song in songs
        a.song(id=song.song) #{song.title} - #{song.artist} 
        a(href="/album/"+album._id+"/song/"+song._id+"/edit") Editar
        form(action="/album/"+album._id+"/song/"+song._id+"?_method=DELETE" method="POST")
            input(type="submit" value="Eliminar")
    audio(controls)
