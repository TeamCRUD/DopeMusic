extends ../layout_app

block content_app
    h1.title Subir nueva cancion
    form(action="/album/"+album._id+"/song/"+song._id+"?_method=PUT"  method="POST")
        .input
            input(type="text" name="title" placeholder="Titulo de la cancion" value=song.title)
        .input
            input(type="text" name="artist" placeholder="Artista" value=song.artist)
        .button
            input(type="submit" value="Crear album")