extends ../layout/collection

block content_collection
    .collection-content
        if albums.length > 0
            .collection-title
                h2 Tu lista de albums creados
            .collection-main-album
                for album in albums
                    .collection-item
                        a(href='/album/'+album._id)
                            if album.cover
                                .collection-cover(style="background-image: url('/covers/"+album.cover+"')")
                                        img(src="/covers/default.png", alt="")
                            else
                                img(src="/covers/default.png")
                        a(href='/album/'+album._id)= album.title
                        p=user.fullname
        else
            .collection-title
                p Aun no hay