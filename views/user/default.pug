extends ../layout/default

block content_default
    .user-content
        .user-main
            .user-avatar
                img(src="/images/1.png")
            .user-info
                h3 #{user.fullname}
        if user.username
            .user-button
                a(href='/user/'+user._id+'/edit') Editar perfil
            .user-button
                a(href='/logout') Cerrar sesion